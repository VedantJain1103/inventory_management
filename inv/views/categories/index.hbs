<div
  style="width: 100%;display: grid;grid-template-columns: repeat(2, 1fr);grid-template-rows: 1fr;grid-column-gap: 0px;grid-row-gap: 0px;"
>
  <div
    style="display:flex;flex-direction:row; align-items:center;margin:1rem 2rem; font-size:1.6rem"
  >{{user.username}}</div>
  <div style="display:flex;flex-direction:row-reverse;align-items:center">
    <a
      href="/categories/create"
      class="primary-button"
      style="width:auto;margin: 1rem 2rem"
    >Create</a>
  </div>
</div>
<div class="showGrid"
  style="width: 100%;display: grid;grid-template-columns: repeat(2, 1fr);grid-template-rows: 1fr;grid-column-gap: 0px;grid-row-gap: 0px;"
>
  {{! <div
    class="container showGrid"
    style="padding:0rem 0px; max-width:100%;margin:1rem 0px"
  > }}
  <div
    class="center"
    style="margin: 20px 0rem 20px 2rem; padding-bottom:1rem; justify-content:left; border-bottom:2px solid black"
  >Name</div>
  <div
    class="center"
    style="margin: 20px 0px 20px 0px ;padding-bottom:1rem; justify-content:center;border-bottom:2px solid black"
  >Actions</div>
  {{! </div> }}
  {{#each categories}}
    {{!-- <div
      class="container showGrid"
      style="padding:0rem 0px; max-width:100%;margin:1rem 0px"
    > --}}
      <div
        class="center"
        style="margin: 20px 0rem 20px 2rem; padding-bottom:1rem; justify-content:left;border-bottom:2px solid rgb(204, 204, 204)"
      >{{this.name}}</div>
      <div
        class="center"
        style="margin: 20px 0px 20px 0px ;padding-bottom:1rem; justify-content:center;border-bottom:2px solid rgb(204, 204, 204)"
      >
        <form action="/categories/{{username}}/{{this.name}}/list" method="get"><button
            style="width:auto; margin:1rem 2rem"
          >
            <span style="margin:2rem;">View</span></button>
        </form>
        <form action="/categories/{{this._id}}/update" method="get"><button
            style="width:auto; margin:1rem 2rem"
          >
            <span style="margin:2rem;">Update</span></button>
        </form>
        <form action="/categories/{{this._id}}/delete" method="get"><button
            style="width:auto; margin:1rem 2rem"
          >
            <span style="margin:2rem;">Delete</span></button>
        </form>
      </span>
    </div>
  {{/each}}